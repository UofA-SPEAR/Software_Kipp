<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel">
    <xacro:macro name="Wheel_Assembly" params="name">
        <!-- Wheel Link -->
        <link name="${name}_wheel">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.175" length="0.130"/> <!-- Example conversion to meters -->
                </geometry>
            </visual>
            <!-- similar collision element -->
        </link>
        
        <!-- Wheel Column Link -->
        <link name="${name}_wheel_column">
            <!-- Define visual and collision with actual size -->
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.05 0.05 0.1"/> <!-- Example size -->
                </geometry>
            </visual>
            <!-- similar collision element -->
        </link>

        <!-- Steering Rack Link -->
        <link name="${name}_steering_rack">
            <!-- Define visual and collision with actual size -->
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <box size="0.1 0.1 0.05"/> <!-- Example size -->
                </geometry>
            </visual>
            <!-- similar collision element -->
        </link>

        <!-- Wheel Joint -->
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="${name}_wheel_column"/>
            <child link="${name}_wheel"/>
            <axis xyz="0 1 0"/>
            <origin xyz="0 0 0"/> <!-- Adjust as needed -->
        </joint>

        <!-- Steering Joint -->
        <joint name="${name}_steering_joint" type="revolute">
            <parent link="${name}_steering_rack"/>
            <child link="${name}_wheel_column"/>
            <limit lower="-1.57" upper="1.57"/> <!-- Adjust as needed -->
            <axis xyz="0 1 0"/>
            <origin xyz="0 0 0"/> <!-- Adjust as needed -->
        </joint>
    </xacro:macro>
</robot>